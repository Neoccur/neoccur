{% extends 'base.html.twig' %}

{% block title %}Register - Neoccur{% endblock %}

{% block navClasses %}NavigationBar{% endblock %}

{% block bodyAttributes %}class="sign-body"{% endblock %}

{% block body %}
    <section> 
      <div class="reg-wrapper">
        <div class="container">
          <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
              <div class="card card-signin my-5 sign-form-body">
                <div class="card-body text-white">
                  <h5 class="card-title text-center">Register</h5>

        
                        {{ form_start(registrationForm, {'attr': { 'novalidate': 'novalidate' }}) }}
                            
                            <div class="form-errors">{{ form_errors(registrationForm.username) }}</div>

                            <div class="form-label-group">
                                {{ form_widget(registrationForm.username, {'attr' : {'class': 'form-control', 'placeholder': 'Username ...', 'required': 'true', 'autofocus': 'true'}}) }}
                            </div>                                                                        
                            
                            <div class="form-errors">{{ form_errors(registrationForm.userEmail) }}</div>
                                                          
                            <div class="form-label-group">
                                {{ form_widget(registrationForm.userEmail, {'attr' : {'class': 'form-control', 'placeholder': 'Email adress ...', 'required': 'true'}}) }}    
                            </div>   
                           
                            <div class="form-errors">{{ form_errors(registrationForm.plainPassword.first) }} </div>                           
                                  
                            <div class="form-label-group">    
                                {{ form_widget(registrationForm.plainPassword.first, {'attr' : {'class': 'form-control', 'placeholder': 'Password ...', 'required': 'true'}}) }}
                            </div>    
                           
                            <div class="form-errors">{{ form_errors(registrationForm.plainPassword.second) }}</div>
                        
                            <div class="form-label-group">    
                                {{ form_widget(registrationForm.plainPassword.second, {'attr' : {'class': 'form-control', 'placeholder': 'Confirm Password ...', 'required': 'true'}}) }}
                            </div>    

                            <div class="form-errors">{{ form_errors(registrationForm.agreeTerms) }}</div>
    
                            <div class="custom-control mb-3">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'agreeTerms-checkbox', 'id': 'customCheck1', 'required': 'true'}}) }}
                                <label class="agreeTerms-label" for="customCheck1">By signing up i agree to the <a href="#">Terms of service</a> and <a href="#">privacy policy</a> for Neoccur</label>
                            </div>

                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
                            <!--<button class="btn btn-lg btn-google btn-block text-uppercase text-white" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>-->

                        {{ form_end(registrationForm) }}


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}
